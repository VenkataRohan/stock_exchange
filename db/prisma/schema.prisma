generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model stock {
  id     Int      @default(autoincrement())
  symbol String   @db.VarChar(255)
  price  String
  time   DateTime

  @@unique([id, time])
}

model User {
  id          String  @id @default(cuid())
  name        String
  email       String  @unique
  password    String
  trades      Trade[] @relation("UserTrades")
  otherTrades Trade[] @relation("OtherUserTrades")
}

enum OrderType {
  Limit
  Market
}

enum Status {
  NEW
  FILLED
  PARTIALLY_FILLED
  CANCELED
}

enum Side {
  Ask
  Bid
}

model Trade {
  id          Int       @id @default(autoincrement())
  orderId     String
  orderType   OrderType
  symbol      String
  price       String
  quantity    String
  status      Status
  side        Side
  filled      String
  time        DateTime
  userId      String
  otherUserId String
  user        User      @relation("UserTrades", fields: [userId], references: [id])
  otherUser   User      @relation("OtherUserTrades", fields: [otherUserId], references: [id])

  @@index([userId])
  @@index([otherUserId])
}
